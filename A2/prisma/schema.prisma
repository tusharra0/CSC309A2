datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum RoleType {
  regular
  cashier
  manager
  superuser
}

enum TransactionType {
  purchase
  redemption
  adjustment
  event
  transfer
}

enum PromotionType {
  automatic
  onetime
}

model User {
  id       Int    @id @default(autoincrement())
  utorid   String @unique
  email    String @unique
  name     String
  password String
  role String @default("regular")
  verified Boolean @default(false)
}
