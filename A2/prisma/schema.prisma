datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

enum RoleType {
  regular
  cashier
  manager
  superuser
}

enum TransactionType {
  purchase
  adjustment
  transfer
  redemption
  event
}

enum PromotionType {
  automatic
  onetime
}

model User {
  id            Int           @id @default(autoincrement())
  utorid        String        @unique
  email         String        @unique
  password      String?
  name          String
  role          RoleType      @default(regular)
  verified      Boolean       @default(false)
  activated     Boolean       @default(false)
  suspicious    Boolean       @default(false)
  points        Int           @default(0)
  avatarUrl     String?
  birthday      DateTime?
  resetToken    String?
  expiresAt     DateTime?
  lastLogin     DateTime?
  createdAt     DateTime      @default(now())

  transactionsTarget    Transaction[]        @relation("TargetUserTransactions")
  transactionsCreated   Transaction[]        @relation("CreatorTransactions")
  transactionsProcessed Transaction[]        @relation("ProcessorTransactions")
  transactionsSent      Transaction[]        @relation("SenderTransactions")
  transactionsReceived  Transaction[]        @relation("RecipientTransactions")

  createdPromotions Promotion[]      @relation("CreatedPromotions")
  promotionUsages   PromotionUsage[]

  createdEvents Event[]         @relation("CreatedEvents")
  organizerLinks EventOrganizer[]
  guestLinks     EventGuest[]
}

model Promotion {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  type        PromotionType
  minSpending Float?
  startTime   DateTime
  endTime     DateTime
  rate        Float?
  points      Int?
  oneTime     Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  createdById Int
  createdBy   User           @relation("CreatedPromotions", fields: [createdById], references: [id], onDelete: Cascade)

  transactions TransactionPromotion[]
  usages       PromotionUsage[]
}

model PromotionUsage {
  id          Int        @id @default(autoincrement())
  promotionId Int
  userId      Int
  usedAt      DateTime   @default(now())

  promotion Promotion @relation(fields: [promotionId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([promotionId, userId])
}

model Transaction {
  id           Int             @id @default(autoincrement())
  type         TransactionType
  pointsDelta  Int             @default(0)
  spent        Float?
  remark       String?
  suspicious   Boolean         @default(false)
  processed    Boolean         @default(false)
  processedAt  DateTime?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  userId      Int?
  user        User?            @relation("TargetUserTransactions", fields: [userId], references: [id])
  senderId    Int?
  sender      User?            @relation("SenderTransactions", fields: [senderId], references: [id])
  recipientId Int?
  recipient   User?            @relation("RecipientTransactions", fields: [recipientId], references: [id])
  createdById Int?
  createdBy   User?            @relation("CreatorTransactions", fields: [createdById], references: [id])
  processedById Int?
  processedBy   User?          @relation("ProcessorTransactions", fields: [processedById], references: [id])

  eventId Int?
  event   Event?         @relation(fields: [eventId], references: [id])

  relatedTransactionId Int?
  relatedTransaction   Transaction?       @relation("TransactionRelation", fields: [relatedTransactionId], references: [id])
  adjustments          Transaction[]      @relation("TransactionRelation")

  promotions TransactionPromotion[]
}

model TransactionPromotion {
  transactionId Int
  promotionId   Int
  bonusPoints   Int      @default(0)
  appliedAt     DateTime @default(now())

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  promotion   Promotion   @relation(fields: [promotionId], references: [id], onDelete: Cascade)

  @@id([transactionId, promotionId])
}

model Event {
  id           Int       @id @default(autoincrement())
  name         String
  description  String?
  location     String
  startTime    DateTime
  endTime      DateTime
  capacity     Int
  pointsTotal  Int       @default(0)
  pointsRemain Int       @default(0)
  pointsAwarded Int      @default(0)
  published    Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  createdById Int
  createdBy   User       @relation("CreatedEvents", fields: [createdById], references: [id], onDelete: Cascade)

  organizers EventOrganizer[]
  guests     EventGuest[]
  transactions Transaction[]
}

model EventOrganizer {
  eventId    Int
  userId     Int
  assignedAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([eventId, userId])
}

model EventGuest {
  eventId   Int
  userId    Int
  joinedAt  DateTime @default(now())
  removedAt DateTime?

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([eventId, userId])
}
